<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_player_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tom.iscore.ViewPlayerProfileActivity"
    tools:showIn="@layout/activity_view_player_profile"
    android:background="#006699">

    <TextView
        android:text="PlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/ShowPlayerName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Gender: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/ShowPlayerGender"
        android:layout_alignBottom="@+id/ShowPlayerGender"
        android:layout_toLeftOf="@+id/ShowPlayerAge"
        android:layout_toStartOf="@+id/ShowPlayerAge" />

    <TextView
        android:text="Age: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/ShowPlayerAge"
        android:layout_alignBottom="@+id/ShowPlayerAge"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:text="Hand: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/ShowPlayerHand"
        android:layout_alignBottom="@+id/ShowPlayerHand"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:text="PlayerAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/ShowPlayerAge"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ShowPlayerName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Player Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShowPlayerGender"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/ShowPlayerAge"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:text="Player Hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShowPlayerHand"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/textView12"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13" />
</RelativeLayout>
