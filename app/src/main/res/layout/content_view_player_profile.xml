<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_player_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tom.iscore.ViewPlayerProfileActivity"
    tools:showIn="@layout/activity_view_player_profile">

    <TextView
        android:text="PlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/ShowPlayerName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="PlayerAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="117dp"
        android:id="@+id/ShowPlayerAge"
        android:textSize="30sp"
        android:layout_below="@+id/ShowPlayerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:text="Player Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShowPlayerGender"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/ShowPlayerAge"
        android:layout_alignBottom="@+id/ShowPlayerAge"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:text="Player Hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ShowPlayerAge"
        android:layout_alignLeft="@+id/ShowPlayerAge"
        android:layout_alignStart="@+id/ShowPlayerAge"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="84dp"
        android:id="@+id/ShowPlayerHand"
        android:textSize="30sp"
        android:textColor="#FFFFFF" />
</RelativeLayout>
